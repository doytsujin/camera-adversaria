<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GalleryActivity" android:background="#222">
    <TextView
            android:text="Prediction"
            android:layout_width="286dp"
            android:layout_height="50dp"
            android:id="@+id/predictedClass" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            tools:layout_editor_absoluteX="32dp"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filterSpinner"
            android:alpha="0." tools:layout_editor_absoluteY="338dp" tools:layout_editor_absoluteX="8dp"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/gallery_list"/>
</android.support.constraint.ConstraintLayout>